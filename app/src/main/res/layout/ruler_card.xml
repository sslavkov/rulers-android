<!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ruler_item_card"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <!-- Wrapper -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Image -->
        <ImageView
            android:id="@+id/card_ruler_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:src="@android:drawable/ic_menu_gallery" />

        <!-- Reign -->
        <TextView
            android:id="@+id/card_ruler_reign_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="@dimen/card_title_margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <!-- Title and Name -->
        <TextView
            android:id="@+id/card_ruler_title_and_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/card_ruler_image"
            android:layout_below="@+id/card_ruler_reign_range"
            android:layout_marginLeft="@dimen/text_margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

        <!-- Card Footer -->
        <!-- Info -->
        <TextView
            android:id="@+id/card_ruler_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_ruler_title_and_name"
            android:layout_margin="@dimen/text_margin"
            android:ellipsize="end"
            android:transitionName="transition_ruler_info" />

    </RelativeLayout>

</android.support.v7.widget.CardView>